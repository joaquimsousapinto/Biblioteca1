@model Biblioteca1.Models.Livro
@{
    ViewBag.Title = "Livro - Criar";
}
<div class="border-bottom mt-4 mb-2">
    <h2><i class="fa fa-bookmark-o text-danger"></i> @ViewBag.Title</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-floating mb-1">
        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-1">
        @Html.EditorFor(model => model.AnoPublicacao, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(model => model.AnoPublicacao, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.AnoPublicacao, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-1">
        @Html.DropDownListFor(model => model.EditoraId, null, "--- Selecione uma editora ---", htmlAttributes: new { @class = "form-select" })
        @Html.LabelFor(model => model.EditoraId, "EditoraId", htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.EditoraId, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-1">
        @Html.EditorFor(model => model.AnoEdicao, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(model => model.AnoEdicao, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.AnoEdicao, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-1">
        @Html.EditorFor(model => model.Exemplares, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(model => model.Exemplares, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.Exemplares, "", new { @class = "text-danger" })
    </div>
    <hr />
    <button type="submit" class="btn btn-primary btn-sm" title="Guardar"><i class="fa fa-save"></i> <small>Guardar</small></button>
    <a href="@Url.Action("Index")" class="btn btn-default btn-sm" title="Voltar à lista"><i class="fa fa-list"></i> <small>Voltar à lista</small></a>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
