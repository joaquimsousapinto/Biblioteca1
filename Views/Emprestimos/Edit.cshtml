@model Biblioteca1.Models.Emprestimo
@{
    ViewBag.Title = "Empréstimo - Editar";
}
<div class="border-bottom mt-4 mb-2">
    <h2><i class="fa fa-bookmark-o text-danger"></i> @ViewBag.Title</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-floating mb-1">
        @Html.DropDownListFor(model => model.UtilizadorId, null, "--- Seleciona um utilizador ---", htmlAttributes: new { @class = "form-select" })
        @Html.LabelFor(model => model.UtilizadorId, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.UtilizadorId, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-1">
        @Html.EditorFor(model => model.DataEmprestimo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(model => model.DataEmprestimo, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.DataEmprestimo, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-1">
        @Html.EditorFor(model => model.DataDevolucaoPrevista, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(model => model.DataDevolucaoPrevista, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.DataDevolucaoPrevista, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-1">
        @Html.EditorFor(model => model.DataDevolucaoReal, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(model => model.DataDevolucaoReal, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.DataDevolucaoReal, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-1">
        @Html.DropDownListFor(model => model.EstadoId, null, "--- Seleciona um Estado ---", htmlAttributes: new { @class = "form-select" })
        @Html.LabelFor(model => model.EstadoId, htmlAttributes: new { @class = "control-label" })
        @Html.ValidationMessageFor(model => model.EstadoId, "", new { @class = "text-danger" })
    </div>
    <hr />
    <button type="submit" class="btn btn-primary btn-sm" title="Guardar"><i class="fa fa-save"></i> <small>Guardar</small></button>
    <a href="@Url.Action("Index")" class="btn btn-default btn-sm" title="Voltar à lista"><i class="fa fa-list"></i> <small>Voltar à lista</small></a>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
