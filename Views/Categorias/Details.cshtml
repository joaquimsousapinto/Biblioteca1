@model Biblioteca1.Models.Categoria
@{
    ViewBag.Title = "Categoria - Detalhes";
}
<div class="border-bottom mt-4 mb-2">
    <h2><i class="fa fa-bookmark-o text-danger"></i> @ViewBag.Title</h2>
</div>
<dl>
    <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
    <dd>@Html.DisplayFor(model => model.Nome)</dd>
    <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
    <dd>@Html.Raw(Model.Descricao.Replace("\n", "<br>"))</dd>
</dl>
<p>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-sm" title="Editar"><i class="fa fa-pencil"></i> <small>Editar</small></a>
    <a href="@Url.Action("Index")" class="btn btn-default btn-sm" title="Voltar à Lista"><i class="fa fa-list"></i> <small>Voltar à Lista</small></a>
</p>
<hr />
@if (Model.Livroes.Count > 0)
{
    <h4><i class=" fa fa-book text-danger"></i> Lista de livros na Categoria (@Model.Livroes.Count)</h4>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Livroes.FirstOrDefault().Titulo)</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model.Livroes)
        {
            <tr>
                <td>@item.Titulo</td>
                <td class="text-end">
                    <a href="@Url.Action("Details", "Livros", new {id = item.Id })" class="btn btn-default btn-xs"><i class="fa fa-eye"></i></a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <i class="fa fa-info-circle text-info">Não Há livros nest acategoria.</i>
}
