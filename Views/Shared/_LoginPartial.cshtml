@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Olá " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class="nav-link" })
        </li>
        <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Fazer logoff</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Account", new { id = "registerLink" })" title="Registre-se"><i class="fa fa-user-plus"></i></a></li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account",new { id = "loginLink" })" title="Login"><i class="fa fa-sign-in"></i></a></li>
    </ul>
}
